{
  "name": "sparkle-ui-library",
  "version": "1.0.5",
  "description": "A React UI component library built with Vite and TypeScript",
  "author": "Oğuzhan Özenç",
  "license": "MIT",
  "homepage": "https://github.com/oguzhanozenc/sparkle-ui-library",
  "repository": {
    "type": "git",
    "url": "https://github.com/oguzhanozenc/sparkle-ui-library.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./style.css": "./dist/assets/index.css"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b tsconfig.lib.json && vite build",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "keywords": [
    "react",
    "react ui library",
    "react-components",
    "ui",
    "ui-kit",
    "ui-components",
    "frontend",
    "design-system",
    "component library",
    "typescript",
    "vite",
    "sparkle",
    "sparkle-ui",
    "sparkle components",
    "sparkle-ui-library",
    "sparkle ui library"
  ],
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/css-modules": "^1.0.5",
    "@types/node": "^22.13.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.3.4",
    "glob": "^11.0.1",
    "postcss": "^8.5.1",
    "rimraf": "^5.0.10",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-css-modules": "^0.0.1",
    "vite-plugin-dts": "^4.2.0",
    "vite-plugin-lib-inject-css": "^2.2.1"
  }
}
